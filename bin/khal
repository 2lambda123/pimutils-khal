try:
    import logging
    import sys

    from khal import ConfigurationParser
    from khal import controllers
    from khal import capture_user_interruption

except ImportError as error:
    sys.stderr.write(str(error))
    sys.exit(1)

capture_user_interruption()

# Read configuration.
conf_parser = ConfigurationParser('khal is a CalDAV based calendar')
conf = conf_parser.parse()

# converting conf.accounts to a dict (where account.names are the keys)
# should be moved to the config parser
out = dict()
for one in conf.accounts:
    out[one.name] = one
conf.accounts = out

if conf is None:
    sys.exit(1)

if conf.debug:
    conf_parser.dump(conf)


if conf.syncrun:
    rvalue = 0
    for account_name in conf.accounts:
        if account_name in conf.sync.accounts:
            logging.debug('start syncing account {0}'.format(account_name))
            try:
                controllers.Sync(conf, account_name)
            except Exception as error:
                if conf.debug:
                    raise
                logging.critical('While syncing account "{0}" an error occured:\n  '.format(one.name) + str(error))
                rvalue = 1
    sys.exit(rvalue)
else:
    controllers.Display(conf)

